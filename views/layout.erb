<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/quitter.css"
    <title></title>
  </head>
  <body>
    <% if session[:user_id] %>
    <a href="#">Sign Out</a>
    <a href="/create">Post</a>
    <% else %>
    <a href="/sign-up">Register</a>
    <a href="/sign-in">Sign In</a>
    <% end %>
    <div class="flash-message">
      <% if flash[:notice] %>
        <%= flash[:notice] %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
