
<a id="edit_link" href="#">Edit Profile</a>
<a id="create_post" href="/post_create/<%= @current_user %>">Create a Post</a>

<div id="background_profile">
</div>
<div id="profileName_container">
  <p id="profile_name">
    <%= @profile.fname %>
    <%= @profile.lname %>
  </p>
</div>

<div id="profile_info">
  <p id="profile_email">
    Email:<%= @profile.email %>
  </p>
  <p id="dob">
    Birthday: <%=@profile.bday.strftime( "%d-%m-%Y") %>
  </p>
</div>

<div id="bio_container">
  <p id="bio">
    A little about <%= @profile.fname %>:<br>
    <%= @profile.bio %>
  </p>
</div>

<div id="edit_form">
  <p id="editFormheader">Edit Profile</p>
  <form id="edit" method="post" action="/profile_edit/<%= @profile.id %>">
      <input type="hidden" name="_method" value="put">
      <input class="name" type="text" name="fname" value="<%= @profile.fname %>" placeholder="First Name">
      <input class="name"type="text" name="lname" value="<%= @profile.lname %>" placeholder="Last Name"><br>
      <input class="name" type="email" name="email"
      value="<%= @profile.email %>" placeholder="Your Email">

      <% if @profile.bday %>
      <input class="name" type="text" name="bday" value="<%= @profile.bday.strftime('%m-%d-%Y')  %>" placeholder="mm/dd/yyyy">
      <% else %>
      <input class="name" type="text" name="bday" value="" placeholder="mm/dd/yyyy">
      <% end %>
      <textarea id="body" name="bio" rows="8" cols="80" placeholder="Body"></textarea>
      <button id="submit_edit"type="submit">Update Profile</button>
  </form>
</div>
<script type="text/javascript" src="/profile.js"></script>
