<div id="post_modal">
  <h2>Create Post</h2>
  <form action="/post/:id"method="post"role="form">
   <div class="form-group">
     <input id="post_title" class="form-control" name="post_title" type="text"  style="width=90%" placeholder="Title"/>
   </div>
   <div class="form-group">
     <br>
     <textarea id="post_body" name="post_body" class="form-control" rows="10" placeholder="Body"></textarea>
     <br><br>
   </div>
   <button type="submit" class="btn btn-success">Submit</button>
  </form>
</div>
